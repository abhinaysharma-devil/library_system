<div class="signup-div">
    <h1>Signup</h1>
    <form action="/signup" method="POST">
        <input type="text" name="f_name" id="f_name" placeholder="  first name" class="signup-inp">
        <input type="text" name="l_name" id="l_name" placeholder="  last name" class="signup-inp">
